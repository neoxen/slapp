<div class="row-fluid">
  <div class="span12">
    <div class="display-section">

      <h3>订餐账户</h3>

      <div class="display-section-contents">
        <table class="table table-striped">
          <tr>
            <th>人员</th>
            <th>余额</th>
            <th>备注</th>
            <th>操作</th>
          </tr>

          <% @accounts.each do |account| %>
              <tr>
                <td><%= account.user.username %></td>
                <td><%= account.amount %></td>
                <td><%= account.remark %></td>
                <td>
                  <%= link_to '充值', edit_account_path(account), :class => 'btn btn-xs btn-success' %>
              </tr>
          <% end %>
          <tr>
            <td><span class="label label-success">余额总计</span></td>
            <td><span class="label badge-success"><%= @total %>元</span></td>
            <td colspan="2"></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>