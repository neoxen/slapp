<%= form_for @account, :html => {:class => 'form-horizontal'} do |account_form| %>
    <% if @account.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

          <ul>
            <% @account.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <fieldset>
      <legend>账户充值：<%= @account.user.username %> | 当前余额：<%= @account.amount %></legend>
      <div class="control-group">
        <%= account_form.label :amount, :class => 'control-label' %>
        <div class="controls">
          <%= account_form.text_field :amount, :class => 'text_field' %>
          <span class="label label-important">注意</span><span>余额框中应填写更新后的金额，如：当前余额50，充值100，此处填写150</span>
        </div>
      </div>
      <div class="control-group">
        <%= account_form.label :remark, :class => 'control-label' %>
        <div class="controls">
          <%= account_form.text_field :remark, :class => 'text_field' %>
        </div>
      </div>
      <div class="form-actions">
        <%= account_form.submit '充值', :class => 'btn btn-primary' %>
        <%= link_to '返回', accounts_path, :class => 'btn' %>
      </div>
    </fieldset>
<% end %>
