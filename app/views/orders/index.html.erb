<div class="row-fluid">
  <div class="span12">
    <div class="row-fluid">
      <div class="span6">
        <div class="well center">
          <h2>账户余额</h2>
          <table class="table table-striped">
            <tr>
              <td style="text-align: center"><%= current_user.username %></td>
              <td style="text-align: right"><%= current_user.account.amount %><td>
            </tr>
          </table>
        </div>
      </div>
      <div class="span6">
        <div class="well center">
          <h2>今日菜单</h2>
          <table class="table table-striped">
            <tr>
              <th>菜名</th>
              <th>价格</th>
              <th>日期</th>
              <th>操作</th>
            </tr>

            <% @dishes_today.each do |dish| %>
                <tr>
                  <td><%= dish.name %></td>
                  <td><%= dish.price %></td>
                  <td><%= dish.set_date %></td>
                  <td><%= link_to '选择', dish, :class => 'btn btn-mini' %>
                  </td>
                </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<hr />

<h1>订餐记录</h1>

<table class="table table-striped">
  <tr>
    <th>日期</th>
    <th>菜品</th>
    <th>价格</th>
    <th>操作</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.order_date %></td>
    <td><%= order.dish_name %></td>
    <td><%= order.dish_price %></td>
    <td>
      <%= link_to 'Show', order %>
      <%= link_to 'Edit', edit_order_path(order) %>
      <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<div class="form-actions">
  <%= link_to '新增记录', new_order_path, :class => 'btn btn-primary'%>
</div>

