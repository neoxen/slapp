<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-success">
          <div class="panel-heading">今日菜单</div>


          <table class="table table-striped table-bordered">
            <tr>
              <th>菜名</th>
              <th>价格</th>
              <th>日期</th>
              <th>操作</th>
            </tr>

            <% @dishes_today.each do |dish| %>
                <tr>
                  <td><%= dish.name %></td>
                  <td><%= dish.price %></td>
                  <td><%= dish.set_date %></td>
                  <td><%= link_to '选择', dish_order_path(dish), :class => 'btn btn-mini' %>
                  </td>
                </tr>
            <% end %>
          </table>

        </div>
      </div>
      <div class="col-md-6">
        <div class="panel panel-success">
          <div class="panel-heading">账户余额</div>
          <table class="table table-striped table-bordered">
            <tr>
              <td style="text-align: center"><%= current_user.username %></td>
              <td style="text-align: right"><%= current_user.account.amount %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-success">
          <div class="panel-heading">订餐记录</div>
          <%= paginate @orders %>
          <table class="table table-striped table-bordered">
            <tr>
              <th>日期</th>
              <th>餐馆</th>
              <th>菜品</th>
              <th>价格</th>
            </tr>
            <% @orders.each do |order| %>
                <tr>
                  <td><%= order.order_date %></td>
                  <td><%= order.restaurant.name %></td>
                  <td><%= order.dish_name %></td>
                  <td><%= order.dish_price %></td>
                </tr>
            <% end %>
          </table>
        </div>
      </div>
      <div class="col-md-6">
        <div class="panel panel-success">
          <div class="panel-heading">充值记录</div>

          <%= paginate @recharge_records %>
          <table class="table table-striped table-bordered">
            <tr>
              <th>日期</th>
              <th>金额</th>
              <th>操作人</th>
            </tr>
            <% @recharge_records.each do |record| %>
                <tr>
                  <td><%= record.recharge_date %></td>
                  <td><%= record.recharge_amount %></td>
                  <td><%= record.operator %></td>
            <% end %>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>


