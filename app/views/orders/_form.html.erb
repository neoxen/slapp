          <%= f.text_field :dish_price, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :order_date, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :order_date, :class => 'text_field' %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit '修改', :class => 'btn btn-primary' %>
