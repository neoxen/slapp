<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @post.name %></dd>
  <dt>Title</dt>
  <dd><%= @post.title %></dd>
  <dt>Content</dt>
  <dd><%= @post.content %></dd>
</dl>

<div class="form-actions">
<%= link_to 'Edit', edit_post_path(@post) , :class => 'btn btn-primary' %> 
<%= link_to 'Back', posts_path , :class => 'btn' %>
</div>
