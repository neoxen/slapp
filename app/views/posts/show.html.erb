<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @post.name %></dd>
  <dt>Title</dt>
  <dd><%= @post.title %></dd>
  <dt>Content</dt>
  <dd><%= @post.content %></dd>
  <dt>Comments</dt>
  <dd>
    <%= render @post.comments %>    
  </dd>
</dl>


<%= form_for [@post, @post.comments.build] , :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>Add a comment</legend>
  <div class="control-group">
    <%= f.label :commenter , :class => 'control-label' %>
    <div class="controls">
    <%= f.text_field :commenter , :class => 'text_field' %>
  </div>
  </div>
  <div class="control-group">
    <%= f.label :body , :class => 'control-label' %>
    <div class="controls">
    <%= f.text_area :body , :class => 'text_area', :rows => '3' %>
  </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to 'Edit Post', edit_post_path(@post) , :class => 'btn' %> 
    <%= link_to 'Back', posts_path , :class => 'btn' %>
  </div>
  </fieldset>
<% end %>

