<dl class="dl-horizontal">
  <dt>部门</dt>
  <dd><%= @post.name %></dd>
  <dt>标题</dt>
  <dd><%= @post.title %></dd>
  <dt>内容</dt>
  <dd><%= @post.content %></dd>
  <dt>评论</dt>
  <dd>
    <%= render @post.comments %>    
  </dd>
</dl>


<%= form_for [@post, @post.comments.build] , :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>评论</legend>
  <div class="control-group">
    <%= f.label :commenter , :class => 'control-label' %>
    <div class="controls">
    <%= f.text_field :commenter , :class => 'text_field' %>
  </div>
  </div>
  <div class="control-group">
    <%= f.label :body , :class => 'control-label' %>
    <div class="controls">
    <%= f.text_area :body , :class => 'text_area', :rows => '3' %>
  </div>
  </div>
  <div class="form-actions">
    <%= f.submit '评论', :class => 'btn btn-primary' %>
    <%= link_to '修改通知', edit_post_path(@post) , :class => 'btn' %> 
    <%= link_to '返回', posts_path , :class => 'btn' %>
  </div>
  </fieldset>
<% end %>

