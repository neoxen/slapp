<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'cd-form'}) do |f| %>
    <%= devise_error_messages! %>


      <p class="fieldset">
        <%= f.label :username, :class => 'image-replace cd-username'  %>
          <%= f.text_field :username, :class => 'full-width has-padding has-border' ,:required => 'required', :placeholder => '用户名', :autofocus => 'autofocus' %>
          <span class='label label-warning'>请使用＊汉字＊真实姓名</span>
      </p>
      <p class="fieldset">
        <%= f.label :email, :class => 'image-replace cd-email' %>
          <%= f.email_field :email, :class => 'full-width has-padding has-border' ,:required => 'required', :placeholder => '电子邮箱' %>
      </p>
      <p class="fieldset">
        <%= f.label :password, :class => 'image-replace cd-password'  %>
          <%= f.password_field :password, :class => 'full-width has-padding has-border' ,:required => 'required',:placeholder => '密码' %>
        <a href="#0" class="hide-password">Hide</a>
      </p>
      <p class="fieldset">
        <%= f.label :password_confirmation, :class => 'image-replace cd-password' %>
          <%= f.password_field :password_confirmation, :class => 'full-width has-padding has-border' ,:required => 'required', :placeholder => '确认密码' %>
        <a href="#0" class="hide-password">Hide</a>
      </p>
      <p class="fieldset">
          <%= f.submit t('global.menu.signup'), :class => 'full-width has-padding' %>
      </p>

<% end %>