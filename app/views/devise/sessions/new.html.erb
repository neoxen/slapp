<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:role => 'form', :class => 'form-horizontal'}) do |f| %>

    <fieldset>
      <legend><%= t('global.menu.signin') %></legend>
      <div class="form-group">
        <%= f.label :username, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :username, :type => 'text', :required => 'required', :autofocus => 'autofocus' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.password_field :password, :type => 'password' , :required => 'required'%>
        </div>
      </div>
      <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <label class="checkbox"><%= f.check_box :remember_me %> <%= f.label :remember_me %></label>
            </div>
          </div>
      <% end -%>

        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit t('global.menu.signin'), :class => 'btn btn-success' %>
        </div>
    </fieldset>
<% end %>