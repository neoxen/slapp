<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-success">
          <div class="panel-heading">最新通知公告</div>

            <table class="table table-striped">
              <tr>
                <td style="text-align: center"><%= @last_post.title %></td>
                <td style="text-align: right"><%= @last_post.created_at.strftime("%Y-%m-%d") %>
                <td>
              </tr>
              <tr>
                <td colspan="2"><%= @last_post.content %></td>
              </tr>
            </table>
            <p style="text-align: center;">
              <%= link_to posts_path, :class => 'btn btn-success' do %>
                  <i class="icon-comment icon-black"></i>&nbsp;查看更多
              <% end %>
            </p>
        </div>
      </div>
      <div class="col-md-6">
        <div class="panel panel-success">
          <div class="panel-heading">今日菜单</div>
          <table class="table table-striped table-bordered">
            <tr>
              <th>菜名</th>
              <th>价格</th>
              <th>日期</th>
              <th>操作</th>
            </tr>

            <% @dishes_today.each do |dish| %>
                <tr>
                  <td><%= dish.name %></td>
                  <td><%= dish.price %></td>
                  <td><%= dish.set_date %></td>
                  <td><%= link_to '选择', dish_order_path(dish), :class => 'btn btn-xs btn-success', :id => 'submit_order' %>
                  </td>
                </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


