<div class="row-fluid">
  <div class="span12">
    <div class="row-fluid">
      <div class="span6">
        <div class="well center">
          <h2>最新通知公告</h2>
          <table class="table table-striped">
            <tr>
              <td style="text-align: center"><%= @last_post.title %></td>
              <td style="text-align: right"><%= @last_post.created_at.strftime("%Y-%m-%d") %><td>
            </tr>
            <tr>
              <td colspan="2"><%= @last_post.content %></td>
            </tr>
          </table>
          <p>
            <%= link_to posts_path, :class => 'btn btn-large btn-block' do %>
                <i class="icon-comment icon-black"></i>&nbsp;查看更多
            <% end %>
          </p>
        </div>
      </div>
      <div class="span6">
        <div class="well center">
          <h2>今日菜单</h2>
          <table class="table table-striped">
            <tr>
              <th>菜名</th>
              <th>价格</th>
              <th>日期</th>
              <th>操作</th>
            </tr>

            <% @dishes_today.each do |dish| %>
                <tr>
                  <td><%= dish.name %></td>
                  <td><%= dish.price %></td>
                  <td><%= dish.set_date %></td>
                  <td><%= link_to '选择', dish, :class => 'btn btn-mini' %>
                  </td>
                </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


