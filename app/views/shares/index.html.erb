<h1>Listing shares</h1>

<table>
  <tr>
    <th>User</th>
    <th>Sharing date</th>
    <th>Sharing content</th>
    <th>Sum graded</th>
    <th>Total grade</th>
    <th>Remark</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shares.each do |share| %>
  <tr>
    <td><%= share.user_id %></td>
    <td><%= share.sharing_date %></td>
    <td><%= share.sharing_content %></td>
    <td><%= share.sum_graded %></td>
    <td><%= share.total_grade %></td>
    <td><%= share.remark %></td>
    <td><%= link_to 'Show', share %></td>
    <td><%= link_to 'Edit', edit_share_path(share) %></td>
    <td><%= link_to 'Destroy', share, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

