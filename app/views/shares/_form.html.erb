<%= form_for(@share) do |f| %>
  <% if @share.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@share.errors.count, "error") %> prohibited this share from being saved:</h2>

      <ul>
      <% @share.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.select :user_id, options_from_collection_for_select(@active_sharers, "id", "username", @share.user_id), :prompt => "选择分享人员" %>
  </div>
  <div class="field">
    <%= f.label :sharing_date %><br />
    <%= f.date_select :sharing_date %>
  </div>
  <div class="field">
    <%= f.label :sharing_content %><br />
    <%= f.text_field :sharing_content %>
  </div>
  <div class="field">
    <%= f.label :sum_graded %><br />
    <%= f.text_field :sum_graded %>
  </div>
  <div class="field">
    <%= f.label :total_grade %><br />
    <%= f.text_field :total_grade %>
  </div>
  <div class="field">
      <%= f.check_box :is_archived %><%= f.label :is_archived %>
    </div>
  <div class="actions">
    <%= f.submit  :class => 'btn btn-xs btn-success' %>
  </div>
<% end %>
