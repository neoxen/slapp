<%= form_for @restaurant, :html => {:class => 'form-horizontal'} do |f| %>
    <% if @restaurant.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

          <ul>
            <% @restaurant.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <fieldset>
      <legend>餐馆信息</legend>
      <div class="control-group">
        <%= f.label :name, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :name, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :address, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :address, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :phone, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :phone, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :remark, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :remark, :class => 'text_field' %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.submit '确定', :class => 'btn btn-primary' %>
        <%= link_to '返回', restaurants_path, :class => 'btn' %>
      </div>
    </fieldset>
<% end %>