<!DOCTYPE html>
<html>
<head>
  <title><%= t('global.application.name') %></title>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <!-- <%= link_to t('global.application.name'), root_path, :class => 'brand' %> -->
      <img src="/assets/logo.jpg" class="brand" />

      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to t('global.menu.home'), root_path %></li>
          <li><%= link_to t('global.menu.blog') , posts_path %></li>
          <li><%= link_to t('global.menu.lunch') %></li>
        </ul>
        <ul class="nav pull-right">
          <% if user_signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= t('global.menu.current_signin') %><%= current_user.username %> <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to t('global.menu.changepassword'), edit_registration_path(:user) %></li>
                  <li class="divider"></li>
                  <li><%= link_to t('global.menu.signout'), destroy_user_session_path, :method => :delete %></li>
                </ul>
              </li>
          <% else %>
              <li>
                <%= link_to t('global.menu.signup'), new_user_registration_path %></li>
              <li>
                <%= link_to t('global.menu.signin'), new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="span12">
      <% flash.each do |key, value| %>
          <div class='alert alert-info' id='<%= key %>'>
            <a class="close" data-dismiss="alert">x</a>
            <%= value %>
          </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="span12">
      <%= yield %>
    </div>
  </div>
  <footer class="footer">
    <p class="pull-right">&copy; 2013 <a target="_blank" href="http://www.wrisc.cn">wrisc.cn</a></p>
  </footer>
</div>


</body>
</html>