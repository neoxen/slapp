<!DOCTYPE html>
<html ng-app='SmartLunch'>
<head>
  <title><%= t('global.application.name') %></title>
  <link href="<%= image_path("favicon.ico") %>" rel="shortcut icon" type="image/vnd.microsoft.icon" />
  <!--[if lt IE 9]>
  <script src="/assets/html5shiv.min.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

<% if user_signed_in? %>

<div class="wrapper">

  <!-- Main Header -->
  <header class="main-header">

    <!-- Logo -->
    <a href="/" class="logo"><img src="/assets/logo.png" style="height:40px;"/></a>

    <!-- Header Navbar -->
    <nav class="navbar navbar-static-top" role="navigation">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>
      <!-- Navbar Right Menu -->
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <!-- Messages: style can be found in dropdown.less-->

          <% if user_signed_in? %>
              <li class="dropdown user user-menu">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <span class="glyphicon glyphicon-user" aria-hidden="true"><%= current_user.username %>
                  <% if current_user.account.amount > 0 %>
                      账户余额：<%= current_user.account.amount %></span>
                  <% else %>
                      <span class="label label-danger">账户余额：<%= current_user.account.amount %></span>
                  <% end %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to t('global.menu.changepassword'), edit_registration_path(:user) %></li>
                  <li class="divider"></li>
                  <li><%= link_to '查看今日订餐', list_today_path %></li>
                  <%= admins_only do %>
                      <li><%= link_to '设置今日菜单', dishes_path %></li>
                      <li><%= link_to '账户管理', accounts_path %></li>
                      <li><%= link_to '充值记录', recharges_path %></li>
                      <li><%= link_to '餐馆列表', restaurants_path %></li>
                      <!--                         <li class = "divider"></li>
                                              <li>< = link _to '设置晨会主持', sharer _choose _path ></li>
                                              <li>< = link _to '查看晨会评分', monthly _list _path ></li> -->
                  <% end %>
                  <li class="divider"></li>
                  <li><%= link_to t('global.menu.signout'), destroy_user_session_path, :method => :delete %></li>
                </ul>
              </li>
          <% else %>
              <li>
                <%= link_to t('global.menu.signin'), new_user_session_path %></li>
              <li>
                <%= link_to t('global.menu.signup'), new_user_registration_path %></li>
          <% end %>


        </ul>
      </div>
    </nav>
  </header>
  <!-- Left side column. contains the logo and sidebar -->
  <aside class="main-sidebar">

    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">

      <!-- Sidebar user panel (optional) -->
      <div class="user-panel">
        <div class="pull-left image">
          <img src="dist/img/user2-160x160.jpg" class="img-circle" alt="User Image" />
        </div>
        <div class="pull-left info">
          <p><span class="glyphicon glyphicon-user" aria-hidden="true"></span></p>
          <!-- Status -->
          <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
        </div>
      </div>

      <!-- Sidebar Menu -->
      <ul class="sidebar-menu">
        <li class="header">HEADER</li>
        <!-- Optionally, you can add icons to the links -->
        <li class="active"><%= link_to t('global.menu.home'), root_path %><</li>
        <li><%= link_to t('global.menu.blog'), posts_path %></li>
        <li><%= link_to t('global.menu.lunch'), orders_path %></li>
      </ul><!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="row">
        <div class="span12">
          <% flash.each do |key, value| %>
              <div class='alert alert-info' id='<%= key %>'>
                <a class="close" data-dismiss="alert">x</a>
                <span class="glyphicon glyphicon-check"></span><%= value %>
              </div>
          <% end %>
        </div>
      </div>
    </section>

    <!-- Main content -->
    <section class="content">

      <%= yield %>

    </section><!-- /.content -->
  </div><!-- /.content-wrapper -->

  <!-- Main Footer -->
  <footer class="main-footer">
    <!-- To the right -->
    <div class="pull-right hidden-xs">
      <p>智慧生活 用<span style="color: red;" class="glyphicon glyphicon-heart"></span>创造</p>
    </div>
    <!-- Default to the left -->
    <p>智慧点餐系统 v3.0.1 &copy; 2015 <a target="_blank" href="http://wrisc.cn">WRISC</a></p>
  </footer>

</div><!-- ./wrapper -->

    <script>
        $(document.body).addClass("skin-black");
    </script>

<% else %>
    <%= yield %>
<% end %>

</body>
</html>